<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        android:gravity="center"
        android:text="Review"
        android:textColor="#FF714D25"
        android:textSize="26dp"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="10"
        >
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>

        <EditText
            android:id="@+id/titleEdit"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="빵집 이름"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="5"
            android:scrollbars="vertical"
            android:layout_gravity="center"></EditText>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <RatingBar
            android:id="@+id/reviewRating"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:max="5"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:layout_gravity="center"
            >

        </RatingBar>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/reviewImageview"
            android:layout_width="378dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:onClick="onClick" />


    </LinearLayout>

    <EditText
        android:id="@+id/reviewEdit"
        android:layout_width="393dp"
        android:layout_height="272dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:hint="리뷰 내용을 입력해주세요!"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="5"
        android:scrollbars="vertical"
        android:textStyle="italic"></EditText>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:backgroundTint="#EDB87F"
            android:gravity="center"
            android:text="작성 안할래요!"
            android:textColor="#714D25"
            android:textSize="15sp"
            android:textStyle="bold"></Button>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3.8" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEDB87F"
            android:gravity="center"
            android:text="입력 완료!"
            android:textColor="#FF714D25"
            android:textSize="15sp"
            android:textStyle="bold"></Button>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>
</LinearLayout>